/* test */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Outfit:wght@300;400;500;600;700;800&display=swap');

@import "tailwindcss";
@config "../tailwind.config.js";

html {
  scroll-behavior: smooth;
}

@layer base {
  body {
    @apply bg-dark-900 text-white font-inter selection:bg-primary selection:text-dark-900 overflow-x-hidden transition-colors duration-300;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    @apply font-outfit;
  }
}

@layer components {
  .glass {
    @apply bg-white/5 backdrop-blur-lg border border-white/10 shadow-xl;
  }

  .glass-card {
    @apply bg-white/5 backdrop-blur-md border border-white/10 hover:border-white/20 transition-all duration-300;
  }

  .text-glow {
    text-shadow: 0 0 10px rgba(0, 242, 254, 0.5);
  }

  .btn-primary {
    @apply px-6 py-3 bg-gradient-to-r from-primary to-primary-dark rounded-full font-semibold text-dark-900 hover:scale-105 active:scale-95 transition-all duration-200 shadow-lg shadow-primary/20 hover:shadow-primary/40;
  }

  .btn-secondary {
    @apply px-6 py-3 border border-white/20 hover:bg-white/10 rounded-full font-semibold hover:scale-105 active:scale-95 transition-all duration-200;
  }

  .neon-border {
    @apply border border-primary/50 shadow-[0_0_15px_rgba(0, 242, 254, 0.3)];
  }

  .section-padding {
    @apply py-20 px-4 md:px-8 max-w-7xl mx-auto;
  }
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  @apply bg-dark-900;
}

::-webkit-scrollbar-thumb {
  @apply bg-dark-600 rounded-full hover:bg-dark-500 transition-colors;
}

/* Hide scrollbar for Chrome, Safari and Opera */
.no-scrollbar::-webkit-scrollbar {
  display: none;
}

/* Hide scrollbar for IE, Edge and Firefox */
.no-scrollbar {
  -ms-overflow-style: none;
  /* IE and Edge */
  scrollbar-width: none;
  /* Firefox */
}

/* Masonry Layout Utility */
.masonry-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  grid-auto-rows: 10px;
}

/* Memory flow animation background */
.memory-image-drift {
  animation: drift 60s linear infinite alternate;
}

@keyframes drift {
  from {
    transform: translate(0, 0) rotate(0deg);
  }

  to {
    transform: translate(100px, 100px) rotate(10deg);
  }
}